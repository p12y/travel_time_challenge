<%= form_for @journey do |f| %>

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :start_time%>
  <%= f.time_field :start_time %>
</div>

<h3>Meetings</h3>

<div id="meetings">
  <%= f.fields_for :meetings do |meeting| %>
    <%= render 'meeting_fields', f: meeting %>
  <% end %>
  <div class="links">
    <%= link_to_add_association 'Add Meeting', f, :meetings %>
  </div>
</div>

<%= f.actions do %>
  <%= f.submit 'Calculate' %>
<% end %>

<% end %>